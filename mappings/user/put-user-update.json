{
  "request": {
    "method": "PUT",
    "urlPattern": "/users/upgrade/[a-z0-9-]+",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.FullName"
      },
      {
        "matchesJsonPath": "$.Username"
      },
      {
        "matchesJsonPath": "$.Email"
      },
      {
        "matchesJsonPath": "$.IsActive"
      }
    ]
  },
  "response": {
    "status": 200,
    "body": "{ \"message\": \"User updated successfully\", \"userId\": \"{{request.path.[2]}}\" }",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
